{
  "manifest_version": 3,
  "name": "Gym Sync Helper",
  "version": "1.0",
  "description": "Helper extension for Gym Sync to control browser audio players.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.spotify.com/*",
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://open.spotify.com/*"],
      "js": ["content.js"]
    }
  ]
}